<script type="text/javascript">
    var editBOMModel;
    var editBOMDetail = JSON.parse(JSON.stringify(@Html.Raw(Model.ToString())));

    function setDate(date) {
        editBOMModel.PurchaseOrderDate(date);
    }

    requirejs(['knockout',
        'app/BillOfMaterials/Edit/ViewModel',
        'app/Common/BindingHandlers/jqueryUI',
        'jquery-ui',
        'knockout.validation'], function (ko, vm) {
            editBOMModel = new vm(editBOMDetail);
            editBOMModel.errors = ko.validation.group(editBOMModel, { deep: true });
            ko.applyBindingsWithValidation(editBOMModel, document.getElementById("BOMEdit"));
            editBOMModel.errors.showAllMessages();
    });


</script>
