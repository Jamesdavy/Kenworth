@model WebApplication.Controllers.ViewModels.Accounts.ForgotPasswordInternalModel
@{
    ViewBag.Title = "Edit";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">
            Password Reset
        </h2>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x=>x.ID)
                @Html.ValidationSummary("Errors")
                <div class="form-group">
                    @Html.LabelFor(x => x.UserName, new { @class = "col-md-2 col-sm-5 control-label" })
                    <div class="col-md-10 col-sm-7">
                        @Html.DisplayFor(x => x.UserName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.NewPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(x => x.NewPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ConfirmNewPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            @Html.PasswordFor(x => x.ConfirmNewPassword, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(x => x.ConfirmNewPassword)
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Reset" class="btn btn-default" />
                        @Html.ActionLink("Back to User", "Edit", new { Model.ID })
                    </div>
                </div>
            </div>
        }
    </div>
</div>


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

