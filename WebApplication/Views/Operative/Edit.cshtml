@model WebApplication.Controllers.ViewModels.Operative.EditModel
<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">
            Edit Operative
        </h2>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x=>x.UserID)
            <div class="form-horizontal">
                @Html.ValidationSummary("Errors")
                <div class="form-group">
                    @Html.LabelFor(x => x.Forename, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            @Html.TextBoxFor(x => x.Forename, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(x => x.Forename)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Surname, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(x => x.Surname)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Telephone, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            @Html.TextBoxFor(x => x.Telephone, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Position, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            @Html.TextBoxFor(x => x.Position, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(x => x.Position)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.StatusID, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                            @Html.CheckBoxFor(x => x.StatusID)
                    </div>
                </div>

                <div class="form-actions">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                            | @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        }
        
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


